<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Welcome Center</title>
  </head>
  <body
    class="bg-gradient-to-br from-orange-400 via-pink-400 to-blue-500 min-h-screen flex items-center justify-center"
    id="welcome"
  >
    <audio id="myAudio">
      <source
        src="http://localhost:3000/audio?id=welcomeAudio.mp3"
        type="audio/mpeg"
      />
      Your browser does not support the audio element.
    </audio>
    <div class="relative w-96 h-[500px] rounded-xl overflow-hidden shadow-lg">
      <img
        src="https://i.imgur.com/cCwfKCg.jpeg"
        alt="welcome_center"
        class="absolute inset-0 w-300 h-500 object-cover opacity-50"
      />
      <div
        class="absolute inset-0 flex flex-col justify-center items-center text-white drop-shadow-md p-6"
      >
        <h1
          class="text-4xl font-bold text-white drop-shadow-md tracking-wide text-center mb-4"
        >
          Welcome Center
        </h1>
        <p class="text-lg">
          <strong>Zona:</strong> Acceso Peatonal<br />
          <strong>Edificio:</strong> Welcome Center<br />
          <strong>Pisos:</strong> 1 - 3<br />
          <strong>Entrada:</strong> Epigmenio Gonzalez<br />
        </p>
      </div>
    </div>
    <script>
      const x = document.querySelector("#myAudio");

      function playAudio() {
        x.play();
      }
      const img = document.querySelector("#welcome");
      img.addEventListener("click", () => {
        playAudio();
      });
    </script>
  </body>
</html>
